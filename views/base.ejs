    <%-include('header')-%>

    <div class="text-center center-div" id="login">
         <div class="container w-25 border py-5">
            <div class="title pb-5">
                <h2 class="font-weight-bold">LogIn Page</h2>
                <span>Log in for the existing user</span>
                <% if (locals.err) { %>
                    <p style="color:  rgb(252, 8, 8);">Invalid username or password.</p>
                  <% } %>
                <%if(locals.logout){%>
                    <div class="alert aleret-success text-center">
                        <%=logout%>
                    </div>
                <%}%>
            </div>
            <form action="/login" method="post" class="loginform">
                <div class="form-group">
                    <h5 align="left">Email Id:</h5>
                    <input type="email" class="form-control" placeholder="Enter your email here..." name="email">
                </div>
                <div class="form-group">
                    <h5 align="left">Password:</h5>
                    <input type="password" class="form-control" placeholder="Enter your password here..." name="password">
                </div>
                <br>
                <button type="submit" class="btn btn-success rounded-pill">Submit</button>
            </form>
         </div>
    </div>

    <%-include('footer')-%>